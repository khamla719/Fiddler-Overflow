<h1>Hello, <%= @logged_in_as.first_name %>!</h1>
<hr>

<div class="bs-example" data-example-id="table-within-panel">
  <div class="panel panel-default">
    <div class="panel-heading"><%= @logged_in_as.first_name %></div>
      <div class="panel-body">
        <p>Here's the information we have for you:</p>
      </div>

      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th>Registered At</th>
            <th>Updated At</th>
          </tr>
        </thead>
      <tbody>
        <tr>
          <th scope="row"><%= @logged_in_as.id %></th>
          <td><%= @logged_in_as.first_name %></td>
          <td><%= @logged_in_as.last_name %></td>
          <td><%= @logged_in_as.email %></td>
          <td><%= @logged_in_as.created_at.strftime("%b, %d, %Y %I:%M %p") %></td>
          <td><%= @logged_in_as.updated_at.strftime("%b, %d, %Y %I:%M %p") %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <h2>Your Questions:</h2>
  <div id='questions'>
    <ul>
      <% @logged_in_as.questions.each do |question| %>
        <li>
          <a href="/questions/:<%= question.id %>"> <%= "#{question.title} " %></a> Created on: <%= question.created_at.strftime("%b, %d, %Y %I:%M %p")%>
        </li>
      <% end %>
    </ul>
  </div>

  <h2>Your Comments:</h2>
  <div id='comments'>
    <ul>
      <% @comments.each do |comment| %>
        <li>
          <a href="/questions/:<%= comment.commentable_id %>"> <%= "#{comment.body} " %></a> Created on: <%= comment.created_at.strftime("%b, %d, %Y %I:%M %p")%>
        </li>
      <% end %>
    </ul>
  </div>

  <h2>Your Answers:</h2>
  <div id='answers'>
    <ul>
      <% @answers.each do |answer| %>
        <li>
          <a href="/questions/:<%= answer.question_id %>"> <%= "#{answer.body} " %></a> Created on: <%= answer.created_at.strftime("%b, %d, %Y %I:%M %p")%>
        </li>
      <% end %>
    </ul>
  </div>

</div>

